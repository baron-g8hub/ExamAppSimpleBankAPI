@model SimpleBankWebAPI.TransferViewModel

@{
    ViewData["Title"] = "Transfer";
}

<h4>Transfer Funds</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Transfer">
            <div asp-validation-summary="ModelOnly" class="alert text-danger" role="alert"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Send From:</label>
                    <select asp-for="SourceAccount" class="form-control small" asp-items="@ViewBag.Accounts"></select>
                    <span asp-validation-for="SourceAccount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" placeholder="0.00" class="form-control" style="font-family:monospace;" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Destination Account:</label>
                    <select asp-for="DestinationAccount" class="form-control small" asp-items="@ViewBag.Accounts"></select>
                    <span asp-validation-for="DestinationAccount" class="text-danger"></span>
                </div>
                <hr />
                <ul class="nav">
                    <li class="nav-item">
                        <button type="submit" value="Submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-floppy-disk"></i>
                            Submit
                        </button>
                    </li>
                    <li class="nav-item" style="padding-top: 0px; padding-right: 5px; padding-bottom: 10px; padding-left: 5px;">
                        <a class="btn btn-secondary btn-sm" asp-controller="Accounts" asp-action="Index">
                            <i class="fas fa-circle-left"></i>
                            Back
                        </a>
                    </li>
                </ul>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
