@model SimpleBankWebAPI.TransferViewModel
@using Utility
@{
    ViewData["Title"] = "Index";
}

<h4>Fund Transfer Transactions</h4>
<hr />

<div class="table-responsive">
    <table class="table table-sm table-bordered">
        <thead class="table-light">
            <tr>
                <th>
                    Reference #.
                </th>
                <th>
                    Posting Date
                </th>
                <th>
                    Account #.
                </th>
                <th style="text-align: center;">
                    Amount
                </th>
                <th>
                    Recipient #.
                </th>
                <th>
                    Description
                </th>
                <th style="text-align: center;">
                    Available Balance
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.EntityList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountNumber)
                    </td>
                    <td scope="row" style="text-align: right;">
                        @*@Utility.HandleAmountString(item.Amount.ToString())*@
                        @item.Amount
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DestinationAccount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td scope="row" style="text-align: right;">
                        @*@Utility.HandleAmountString(item.RunningBalance.ToString())*@
                        @item.RunningBalance
                    </td>
                    <td scope="row" style="text-align: center;">
                        <form asp-route-id="@item.TransactionId" method="post">
                            <a class="btn btn-sm btn-outline-primary" asp-controller="Transactions" asp-action="Details" asp-route-id="@item.TransactionId">
                                <i class="fas fa-info-circle"></i>
                            </a>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
